

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.username {
  border-bottom: 1rpx solid #f5f5f5;
  text-align: center;
  margin-top: 15rpx;
}

.user-intro {
  width: 80%;
  height: 250rpx;
  border: 1rpx solid #f5f5f5;
  margin-top: 30rpx;
  padding: 20rpx;
}

.intro-text {
  width: 100%;
  height: 100%;
  font-size: 14px;
}

.submit {
  width: 80%;
  background: #1aad19;
  color: #fff;
  font-size: 16px;
  text-align: center;
  border-radius: 5rpx;
  margin-top: 15rpx;
}

.avatar-wrapper{
  background: none;
}
.info-btn{
  background-color: #f7f7f7;
  text-align: center;
  border-radius: 4px;
  border: none;
  color: #07c160;
  width: 350rpx;
  margin-top: 80rpx;
}
.footer{
  position: absolute;
  bottom: 54rpx;
  font-size: 28rpx;
}
.footer__links{
  text-align: center;
  margin-bottom: 15rpx;
  color: #f16705;
}
.footer__text{
  color: #a9a5a5;
}