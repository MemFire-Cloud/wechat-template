

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.username {
  width: 80%;
  border: none;
  border-bottom: 1px solid #ccc;
  text-align: center;
  margin-top: 15rpx;
}

.user-intro {
  width: 80%;
  height: 250rpx;
  border: 1px solid #ccc;
  margin-top: 30rpx;
  padding: 20rpx;
}

.intro-text {
  width: 100%;
  height: 100%;
  font-size: 14px;
}

.submit {
  width: 80%;
  background: #1aad19;
  color: #fff;
  font-size: 16px;
  text-align: center;
  border-radius: 5rpx;
  margin-top: 15rpx;
}
