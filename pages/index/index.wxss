.list-menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 400rpx;
}

.menu-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 40rpx;
}
